FROM node:18-alpine

WORKDIR /app/frontend

# Copy package files
COPY app/frontend/package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application
COPY app/frontend/ .

# Set environment variables
ENV PORT=3000
ENV HOST=0.0.0.0

# Expose port
EXPOSE 3000

# Start the application
CMD ["npm", "start"] 